<!--pages/ClockList/ClockList.wxml-->

<view class="group_list_text" hidden='{{isBindExpert}}'>{{string}}</view>
<scroll-view scroll-y="true" style="width:100%;">

  <view wx:for="{{clockList}}" class="group_list">
    <view class="lable1">
      <text class="groupS1">{{item.name}}</text>
    </view>
    <view class="lable2">
      <view class="groupS3">{{item.minutes}}分钟</view>
    </view>
    <view class="lable3">
      <view class="groupS3">完成度：{{item.showCompletion}}%</view>
    </view>
    <view class="lable4">
      <button class="groupS4" hover-class="button-hover" bindtap="changeToClockStart" data-clock-Name="{{item.name}}" data-minutes-Limit="{{item.minutes}}" data-groupid="{{item.groupId}}">开始</button>
    </view>
  </view>

</scroll-view>
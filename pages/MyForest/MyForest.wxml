<!--pages/MyForest/MyForest.wxml-->


<view class='imagesize'>
  <image src="../images/forest.jpg">
  </image>
</view>

<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">面积</view>
    <view class="weui-cell__ft">**平方米</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">树木量</view>
    <view class="weui-cell__ft">**棵</view>
  </view>
</view>

<view class='setting' bindtap='jumpLogin'>
  <text style="font-size:1.5rem;color:#0AAAF6">购买树苗 :</text>
  <image class='btnImg' src='../images/tree.png' style="width:100rpx;height:100rpx;"></image>
  <text style="font-size:1.5rem;color:#0AAAF6">X</text>
  <view class="weui-cell__bd">
    <input class="weui-input" placeholder=" n " style="font-size:1.5rem;color:#0AAAF6" />
  </view>
</view>

 <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="showTopTips">确定购买</button>
        </view>
  
<i-panel title="圆角输入框">
    <i-input value="{{ value6 }}" type="number" right title="消费总额" mode="wrapped" placeholder="询问收银员后输入" />
    <i-input value="{{ value7 }}" type="number" right error title="不参与优惠金额" mode="wrapped" placeholder="询问收银员后输入" />
</i-panel>
.imagesize{
 display:flex;                  
 justify-content: center;        
}
.imagesize image { 
  width:100%;
  height:400rpx;
}

.btn {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 10%;
  margin-left:20%;
  width: 35%;
  height:100px;
  background-color:#fff;
  color:rgb(13, 13, 14)
}
/*组件位置*/
.size{
  font-size: 50rpx;
  color:rgb(13, 13, 14);
}
/*字体大小*/


.setting{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 5%;
  margin-left:10%;
}
.section{
  width: 3rem;
  height: 1.5rem;
  border: 1px solid rgb(8, 8, 8);
  border-radius: 25px;
  margin-left:0.5rem;
  justify-content: center;
  align-items: center;
}
.input{
 padding-left: 10px;
 height: 1rem; 
}
/*整个页面样式*/

page {
  height: 100%;
}

.search_area{
    display: flex;  
    align-items: center;  
    background: #beedff;   
    width: 100%; 
    height: 100rpx;
}
.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 70%;
  height: 80rpx;
  background-color: whitesmoke;
  margin-top: 6rpx;
  margin-left: 15%;
  border: 1rpx solid whitesmoke;
  border-radius: 5rpx;
}
.search input {
  font-size: 40rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left: 30rpx;
}

.search image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}

.button-hover{
  opacity: 0.7;
  transform: scale(0.96,0.96);
}


.windows {
  margin-top: 100rpx;
  border: #beedff 5px solid;
}

.group_list {
  width: 60%;
  text-align: center;
  margin-top: 5rpx;
  margin-left: 15%;
  margin-bottom: 5rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 50rpx;
  padding-right: 40rpx;
  border: #ddd 1px solid;
}

.group_list_text {
  width: 4rem;
  display: table-cell;
}

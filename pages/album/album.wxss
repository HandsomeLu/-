/* pages/album.wxss */
.album-list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 90%;
  margin-top: 3%;
  margin-left: 5%;
  overflow: hidden;
  justify-content: space-between;
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 15rpx #888;
}

.background {
  background-size: 101% 101%;
  display: block;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
}

.album-card{
  height: 200rpx;
}

.album-card .title{
  color:rgb(0, 0, 0);
  padding: 0 30rpx;
  position: absolute;
  top:0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-content: center;
}
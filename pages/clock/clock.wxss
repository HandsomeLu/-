/* pages/clock/clock.wxss */
.container {
  display: flex;
  height: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #fff;
  box-sizing:border-box;
  padding: 0rpx;
}

.timer_main {
  position: relative;
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #fff;
  transition: all .5s;
  z-index: 1;
  padding: 10px 0;
  width: 100%;
  height: 500rpx;
}

.timer_time-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200px;
  height: 200px;
  text-align: center;
  transition: all .3s;
  border-radius: 50%;
}

.timer_progress {
  position: absolute;
  top: 0;
  width: 100px;
  height: 200px;
  overflow: hidden;
  transition: all .3s;
}

.clock_tree{
  width: 250rpx;
  height: 250rpx;
}
.timer_progress_mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border: 3px solid #dce0e0;
  opacity: .5;
  border-radius: 50%;
}

.timer_left {
  left: 0;
  box-sizing:border-box;

}

.timer_right {
  right: 0;
  box-sizing:border-box;

}

.timer_circle {
  position: absolute;
  top: 0;
  width: 200px;
  height: 200px;
  border: 3px solid transparent;
  border-radius: 50%;
  transition: all .3s;
  box-sizing:border-box;
}

.timer_circle--left {
  left: 0;
  border-left: 3px solid #fa9857;
  border-bottom: 3px solid #fa9857;
  transform: rotate(45deg);
}

.timer_circle--right {
  right: 0;
  border-right: 3px solid #fa9857;
  border-bottom: 3px solid #fa9857;
  transform: rotate(-45deg);
}

.timer_time-right {}

.timer_time {
  font-size: 40px;
  color: #000000;
  font-weight: lighter;
  transition: font-size .3s;
}

.timer_taskName {
  position: absolute;
  top: -100px;
  font-size: 14px;
  letter-spacing: 5px;
  color: #000000;
}

.timer_name {
  width: 100%;
  height: 40px;
  padding-left: 10px;
  color: #999;
}

.timer_footer {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding-top: 40px;
  transition: all .3s;
}

.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #fff;
  width: 80px;
  height: 80px;
  margin: 0 20px;
  border-radius: 50%;
  transition: all .7s;
  background-color: #48c23d;
}

.timer .timer_ctrl text {}


/*runing style*/

.timer--runing .timer_main {
  flex: 1;
}

.timer--runing .timer_time {
  font-size: 40px;
}

.timer--runing .timer_time-wrap {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_progress {
  width: 100px;
  height: 200px;
}

.timer--runing .timer_circle {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_footer {
  flex: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 10;
}

.timer--runing .timer_ctrl {
  background-color: #208DEA;
  height: 30px;
  margin-bottom: 30px;
  border: 1px dashed #dedede;
  border-radius: 20px;
}
.button{
  width: 40%;
  background-color:#fff;
  margin-top: 100rpx;
  box-shadow: 0px 10rpx 30rpx 0px rgba(0, 0, 0, 0.1);
}
.button-hover{
  opacity: 0.7;
  transform: scale(0.96,0.96);
}



.progressBar {
  position: relative;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  width:80%;
  margin-left: 10%;
  margin-top: 5%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5px 15px 0px #ffad492c;
  border-radius: 5px;
  border-bottom: 2rpx solid #ffae49;
}

.movable-area {
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -10rpx;
  left: 0;
}

.movable-view {
  width: 50rpx;
  height: 50rpx;
  background: #ffae49;
  box-shadow: 0px 10rpx 30rpx 0px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

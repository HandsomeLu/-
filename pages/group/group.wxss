.list {
  height: 100%;
}

.list .item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}
.index{
 margin-top: 5%;
 margin-left: 0%;
}
.index text{ 
  width: 50rpx;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
 
  color: #f66a0c;
  padding: 10rpx;
  border-radius: 20rpx;
}
.list .item .poster {
  height: 50px;
    width: 50px;
    border-radius: 25px;
}

.list .item .meta {
  flex: 1;
  margin-left: 4%;
  margin-top: 4%;
}

.list .item .meta .title,
.list .item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}

.list .item .meta .title {
  font-size: 40rpx;
}

.list .item .meta .sub-title {
  font-size: 30rpx;
  color: #c0c0c0;
}

.list .item .meta .artists {
  font-size: 24rpx;
  color: #999;
}
.rating{
  margin-left: 20%;
   margin-top: 6%;
}
.list .item .rating text {
  width: 40rpx;
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
 
  color: #fa9857;
  padding: 10rpx;
  border-radius: 20rpx;
}



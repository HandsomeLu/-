}

.clock-list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  color: rgb(117, 117, 117);
}

.clock-list1 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  color: #fff;
}

.p {
  width: 70%;
}

.time_content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.time_icon {
  height: 30rpx;
  width: 30rpx;
  margin-left: 40rpx;
}

.lable2 {
  display: flex;
  padding: 2%;
  margin-left: 30rpx;
  font-size: 40rpx;
}

.lable3 {
  display: flex;
  padding: 2%;
  width: 50%;
}

.plan-list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);

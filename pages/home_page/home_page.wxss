.list-cell {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fa9857;
}

.goalList-title {
  width: 70%;
  height: 50rpx;
  padding-left: 8%;
  font-size: 36rpx;
  /*font-weight: 550;*/
  color: #fff;
  margin-bottom: 10rpx;
}

.newGoal {
  width: 42rpx;
  height: 42rpx;
}

.noData{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 20%;
}

.noData_image{
  width: 500rpx;
  height: 500rpx;
}

.list-card {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 90%;
  margin-top: 3%;
  margin-left: 5%;
  overflow: hidden;
  justify-content: space-between;
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 15rpx #888;
  margin-bottom: 1.5%;
}

.list-card_1 {
  display: flex;
  flex-direction: row;

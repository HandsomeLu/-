/* pages/home-page/homet-page.wxss */

.list-cell {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fa9857;
}

.goalList-title {
  width: 70%;
  padding-left: 12%;
  font-size: 40rpx;
  /*font-weight: 550;*/
  color: #000;
}

.newGoal {
  width: 42rpx;
  height: 42rpx;
}

.list-card {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 90%;
  margin-top: 3%;
  margin-left: 5%;
  border: 2rpx solid #e9833e;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 3rpx #888888;
}
.list-card_1 {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 90%;
  margin-top: 3%;
  margin-left: 5%;
  border: 2rpx solid #b9b6b4;
  border-radius: 10rpx;
}

.clock-list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.p {
  width: 65%;
  margin-right: 5%;
}

.lable2 {
  display: flex;
  width: 100%;
  padding: 2%;
  margin-left: 5%;
  font-size: 40rpx;
}

.plan-list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.button-hover {
  opacity: 0.7;
  transform: scale(0.96, 0.96);
}

.btn2 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 95%;
  font-size: 45rpx;
  background-color: #fff;
}

.hide {
  display: none;
}

.show {
  display: flex;
}

.finish {
  width: 49rpx;
  height: 49rpx;
  padding: 5%;
  margin-right: 5%;
  margin-left: 8%;
}

/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawerbox {
  width: 80%;
  height: 50%;
  overflow: scroll;
  position: fixed;
  top: 25%;
  left: 10%;
  z-index: 1001;
  background: #fff;
  border-radius: 10px;
}

.drawer-title {
  padding: 3%;
  padding-left: 5%;
  font: 45rpx;
  /*font-weight: 550;*/
  text-align: left;
  color: #000;
  background-color: #fa9857;
}

.line {
  display: flex;
  padding-top: 3%;
  height: 12%;
}

.lable1 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 5%;
  margin-right: 5%;
  width: 15%;
  font-size: 40rpx;
}

.btn1 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 70%;
  margin-top: 2%;
  font-size: 32rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.btn3{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 70%;
  margin-bottom: 2%;
  font-size: 25rpx;
  border-radius: 50rpx;
  background-color: #fff;
}

.active {
  color: #fff;
  border:2rpx solid #ffae49;
  background-color: #ffae49;
  padding:8rpx;margin-right: 3%;width: 20%;
}

button::after {
    border: 0;
  } 
.inactive {
  color: #ffae49;
  border:2rpx solid #ffae49;
  background-color: #fff;
  padding:8rpx;margin-right: 3%;width: 20%;
}

.name-input {
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  font-size: 40rpx;
  width: 70%;
  border-bottom: 6rpx solid #ffae49;
}

.time-input {
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  margin-left: 7%;
  width: 55%;
  font-size: 40rpx;
}

.btn_ok {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 3%;
  padding: 3%;
  font: 45rpx;
  color: #fa8d44;
  border-top: 1px solid #fa9857;
}
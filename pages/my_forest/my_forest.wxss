/* pages/my_forest/my_forest.wxss */

.canvas {
  width: 100%;
  margin-top: 80rpx;
}

.imagesize {
  display: flex;
  justify-content: center;
}

.imagesize image {
  width: 100%;
  height: 400rpx;
}

.tree-content {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 50rpx;
}

.tree-number {
  margin-top: 1%;
  color: #9e9d9d;
  font-size: 40rpx;
}

.tree-image {
  height: 80rpx;
  width: 80rpx;
}

.button {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}

.button1 {
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-top: 2%;
  margin-bottom: 2%;
}

.button2 {
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-top: 2%;
  margin-bottom: 2%;
}

.name {
  margin-left: 10px;
}

.divLine.mid {
  background-color: #bdbbbb;
  width: 100%;
  height: 2rpx;
}

.date {
  height: 80rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 1%;
}

.date-str {
  margin-top: 3%;
  font-size: 30rpx;
  color: #a5a4a4;
}

.date-content {
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  align-items: center;
}

.clock {
  height: 50rpx;
  width: 50rpx;
  margin-top: 2%;
  margin-right: 10rpx;
}

.arrow {
  height: 100rpx;
  width: 100rpx;
  margin-top: 2%;
}

  width:100%;
  height:400rpx;
}
.tree-content{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 50rpx;
  }
.tree-number{
  margin-top: 1%;
  color: #9e9d9d;
  font-size: 40rpx;
}
.tree-image{
  height: 80rpx;
  width: 80rpx;
}
.button {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}

.button1{
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;  

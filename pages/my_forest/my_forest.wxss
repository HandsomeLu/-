}
.date{
  height: 80rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.date-str{
  margin-top: 3%;
  font-size: 30rpx;
  color: #a5a4a4
}
.date-content{
  margin-left: 50rpx;

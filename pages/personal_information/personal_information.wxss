    align-items: center;  
    flex-direction: column;  
    padding: 20rpx;
}

.nav-item .nav-image {  
    width: 55rpx;  
    height: 55rpx;  
    margin: 5rpx;
}

.nav-item text {  
    margin-top: 20rpx;  
    font-size: 30rpx;  
    color: gray;
}

